<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="005-remove-game-duration" author="thonbecker">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="games" columnName="game_duration_minutes"/>
        </preConditions>
        <dropColumn tableName="games" columnName="game_duration_minutes"/>
        <rollback>
            <addColumn tableName="games">
                <column name="game_duration_minutes" type="INTEGER"/>
            </addColumn>
        </rollback>
    </changeSet>

</databaseChangeLog>
